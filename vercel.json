{
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/index", "destination": "/index.html" },
    { "source": "/custom-website", "destination": "/custom-website.html" },
    { "source": "/digital-products", "destination": "/digital-products.html" },
    { "source": "/google-ads", "destination": "/google-ads.html" },
    { "source": "/learning-platform", "destination": "/learning-platform.html" },
    { "source": "/portfolio", "destination": "/portfolio.html" },
    { "source": "/pricing", "destination": "/pricing.html" },
    { "source": "/why-choose-us", "destination": "/why-choose-us.html" },
    { "source": "/de", "destination": "/de/index.html" },
    { "source": "/de/index", "destination": "/de/index.html" },
    { "source": "/de/custom-website", "destination": "/de/custom-website.html" },
    { "source": "/de/digital-products", "destination": "/de/digital-products.html" },
    { "source": "/de/google-ads", "destination": "/de/google-ads.html" },
    { "source": "/de/learning-platform", "destination": "/de/learning-platform.html" },
    { "source": "/de/portfolio", "destination": "/de/portfolio.html" },
    { "source": "/de/why-choose-us", "destination": "/de/why-choose-us.html" }
  ],
  "redirects": [
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": false
    },
    {
      "source": "/de/index.html",
      "destination": "/de",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/(.*)\\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot|webp|mp4)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "github": {
    "silent": true
  }
}
